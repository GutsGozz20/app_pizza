<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

  <LinearLayout
      android:layout_width="409dp"
      android:layout_height="729dp"
      android:orientation="vertical"
      tools:layout_editor_absoluteX="1dp"
      tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/textView4"
          android:layout_width="305dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:text=" Đặt Đồ Ăn"
          android:textAlignment="center"
          android:textColor="#DB1414"
          android:textSize="34sp"
          android:textStyle="bold" />

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="39dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          app:srcCompat="@drawable/thong_bao_vang" />

      <ImageView
          android:id="@+id/imageView5"
          android:layout_width="52dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          app:srcCompat="@drawable/gio_hang_vang" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

      <Button
          android:id="@+id/btnsearch"
          android:layout_width="349dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          android:layout_weight="1"
          android:text="🔍  Tìm kiếm đồ ăn"
          android:textAlignment="viewStart"
          android:textSize="16sp"
          android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/txtpizza"
          android:layout_width="114dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingLeft="5dp"
          android:text="Pizza"
          android:textSize="24sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/txthaisan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Hải sản"
          android:textColor="#EF1717"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/txtthapcam"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Thập cẩm "
          android:textColor="#EF1717"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/txttruyenthong"
          android:layout_width="83dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Truyền thống"
          android:textColor="#EF1717"
          android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/imghaisan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          app:srcCompat="@drawable/pizzahaisannhietdoi" />

      <ImageView
          android:id="@+id/imgga"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          app:srcCompat="@drawable/chicken_pizaa3" />

      <ImageView
          android:id="@+id/imgtruyenthong"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          app:srcCompat="@drawable/truyenthong1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#308A0C"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/textView6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="để viết giới thiệu về cửa hàng"
          android:textSize="20sp" />
    </LinearLayout>
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>